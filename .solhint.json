{
  "extends": ["solhint:recommended"],
  "rules": {
    "compiler-version": "off",
    "prettier/prettier": "error",
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "quotes": "off",
    "reason-string": "off",
    "not-rely-on-time": "off",
    "no-inline-assembly": "off"
  },
  "plugins": ["prettier"]
}